<li>
  {{rental.owner}}'s {{rental.type}} in {{rental.city}}
  {{#if isImageShowing }}
    <p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}}></p>
  {{else}}
    <button class="btn btn-primary btn-xs" {{action 'imageShow'}}>Show Image</button>
  {{/if}}
  <button class="btn btn-danger btn-xs" {{action 'delete' rental}}>Delete</button>
</li>
